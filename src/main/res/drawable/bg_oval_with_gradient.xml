<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- solid指定形状的填充色，只有android:color一个属性 -->
    <solid android:color="#E4007F"/>
    <padding
        android:bottom="10dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"/>
    <!--size shape的大小 表示宽高，这个表示的是shape的固有大小，
    但是一般来说它并不是shape最终显示的大小
    ，对于shape来说并没有宽高的概念，作为view的背景只会自适应view的宽高-->
    <size
        android:width="40dp"
        android:height="40dp"/>
    <!-- stroke设置描边 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray"/>
    <gradient
        android:endColor="#000000"
        android:gradientRadius="40dp"
        android:startColor="#FFFFFF"
        android:type="radial" />

</shape>